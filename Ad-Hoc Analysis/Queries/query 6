CREATE DEFINER=`root`@`localhost` PROCEDURE `top_n_products_per_division_by_sold_qnt_using_drnk`(fy int, top_n int)
BEGIN
with cte1 as (
SELECT p.division, p.product, sum(s.sold_quantity) as sold_quantity
FROM fact_sales_monthly s
join dim_product p 
on p.product_code = s.product_code
where fiscal_year = fy
GROUP BY p.division, p.product
order by sold_quantity desc
),
cte2 as (select *,
  dense_rank() over( partition by division order by sold_quantity desc) as drnk
from cte1)
select * from cte2
where drnk <= top_n;
END
